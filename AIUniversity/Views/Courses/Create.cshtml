@{
  Layout = "_Layout";
}

@model AIUniversity.Models.Course

<h4>Add a new Course</h4>
<hr/>

<p>@Html.ValidationMessageFor(model => model.CourseName, "", new { @class = "text-danger", @style = "font-weight: 600;"})</p>

@using (Html.BeginForm())
{

<div class = "container">
  <p>Course</p>
  <div class="row">
    <div class="col-6 col-md-2"><p>Name: </p></div>
    <div class="col-6 col-md-2">@Html.TextBoxFor(model => model.CourseName)</div> 
  </div>
  <div class="row">
     <div class="col-6 col-md-2"><p>Description: </p></div>
     <div class="col-6 col-md-2">@Html.TextBoxFor(model => model.CourseDescription)</div> 
  </div>
  <div class="row">
    <div class="col-6 col-md-2"><p>Professor: </p></div>
    <div class="col-6 col-md-2">@Html.DropDownList("ProfessorId", (SelectList)ViewBag.ProfessorId, "Select a professor")
  </div> 
  <div class="row">
     <div class="col-6 col-md-2"><p>Department: </p></div>
     <div class="col-6 col-md-2"> @Html.DropDownList("DepartmentId", (SelectList)ViewBag.DepartmentId, "Select a department")</div> 
  </div> 

  </div>
  <div class="row">
    <div class="col-6 col-md-2"><input type="submit" value="Add Course"/></div>
  </div>
</div>

}
<br>
<p>@Html.ActionLink("Show Courses", "Index")</p>