@{
  Layout = "_Layout";
}

@model AIUniversity.Models.Course

<h2>Add a student</h2>

<h4>Add a student to this course: @Html.DisplayFor(model => model.CourseName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CourseId)

    @Html.Label("Select a student")
    @Html.DropDownList("StudentId")

    <input type="submit" value="Save" class = "btn btn-primary mb-2"/>
}

<p>@Html.ActionLink("Back to list", "Index", null, null, new { @class = "btn btn-secondary mb-2" })</p>

