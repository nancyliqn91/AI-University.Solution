@{
  Layout = "_Layout";
}

@using AIUniversity.Models;

<h1>Students</h1>

@if (@Model.Count == 0)
{
  <h3>No Students have been added yet!</h3>
}
else
{
  <ul>
  @foreach (Student student in Model)
  {
    <li>@Html.ActionLink($"{student.StudentLastName} , {student.StudentFirstName}", "Details", new { id = student.StudentId}, new { @class = "btn btn-primary mb-2" })</li>
  }
  </ul>
}

<p>@Html.ActionLink("Add a new Student", "Create", null, null, new { @class = "btn btn-secondary mb-2" })</p>
