@{
  Layout = "_Layout";
}

@using AIUniversity.Models;

<h1>Clubs</h1>

@if (@Model.Count == 0)
{
  <h3>No clubs have been added yet!</h3>
} 

<ul>
  @foreach(Club club in Model)
  {
    <li>@Html.ActionLink($"{club.ClubName}", "Details", new { id = club.ClubId }, new { @class = "btn btn-primary mb-2" })</li>
  }
</ul>

<p>@Html.ActionLink("Add new club", "Create", null, null, new { @class = "btn btn-secondary mb-2" })</p>
