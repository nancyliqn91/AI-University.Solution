@{
  Layout = "_Layout";
}

@using AIUniversity.Models;

<h1>Courses</h1>

<div class="box">
  @if (@Model.Count == 0)
  {
    <h3>No courses yet!</h3>
  } 

  <ul>
    @foreach(Course course in Model)
    {
      <li>@Html.ActionLink($"{course.CourseName} | {course.Department.DepartmentName} | {course.Professor.ProfessorLastName}", "Details", new { id = course.CourseId }, new { @class = "btn btn-primary mb-2" })</li>
    }
  </ul>
</div>

<p>@Html.ActionLink("Add New Course", "Create", null, null, new { @class = "btn btn-secondary mb-2" })</p>