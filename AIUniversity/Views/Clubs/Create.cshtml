@{
  Layout = "_Layout";
}

@model AIUniversity.Models.Club

<h4>Add a new Club</h4>
<hr />

<p>@Html.ValidationMessageFor(model => model.ClubName, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
<div class = "container">
  <p>Club</p>
  <div class="row">
    <div class="col-6 col-md-2"><p>Name: </p></div>
    <div class="col-6 col-md-2">@Html.TextBoxFor(model => model.ClubName)</div> 
  </div>
  <div class="row">
     <div class="col-6 col-md-2"><p>President: </p></div>
     <div class="col-6 col-md-2">@Html.TextBoxFor(model => model.ClubPresident)</div> 
  </div>
  
  <div class="row">
    <div class="col-6 col-md-2"><p>Description: </p></div>
    <div class="col-6 col-md-2">@Html.TextBoxFor(model => model.ClubDescription)</div> 
  </div>
  <div class="row">
    <div class="col-6 col-md-2"><input type="submit" value="Add Club" class = "btn btn-primary mb-2"/></div>
  </div>
</div>

}
<br>
<p>@Html.ActionLink("Show Clubs", "Index", null, null, new { @class = "btn btn-secondary mb-2" })</p>