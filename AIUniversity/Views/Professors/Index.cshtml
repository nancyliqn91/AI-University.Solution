@{
  Layout = "_Layout";
}

@using AIUniversity.Models;

<h1>Professors</h1>

@if (@Model.Count == 0)
{
  <h3>No professors have been added yet!</h3>
} 

<ul>
  @foreach(Professor professor in Model)
  {
    <li>@Html.ActionLink($"{professor.ProfessorFirstName}", "Details", new { id = professor.ProfessorId }) | @professor.Department.DepartmentName</li>
  }
</ul>

<p>@Html.ActionLink("Add new professor", "Create")</p>
