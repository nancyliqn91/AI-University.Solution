@{
  Layout = "_Layout";
}

@using AIUniversity.Models;

<h1>Courses</h1>

<div class="box">
  @if (@Model.Count == 0)
  {
    <h3>No courses yet!</h3>
  } 

  <ul>
    @foreach(Course course in Model)
    {
      <li>@Html.ActionLink($"{course.CourseName}", "Details", new { id = course.CourseId })| @course.Department.DepartmentName| @course.Professor.ProfessorLastName</li>
    }
  </ul>
</div>

<p>@Html.ActionLink("Add New Course", "Create")</p>