@{
  Layout = "_Layout";
}

@model AIUniversity.Models.Student

<h2>Add Course</h2>

<h4>Add an course for this student: @Html.DisplayFor(model => model.StudentLastName), @Html.DisplayFor(model => model.StudentFirstName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StudentId)

    @Html.Label("Select course")
    @Html.DropDownList("CourseId")

    <input type="submit" value="Save" class = "btn btn-primary mb-2"/>
}

<p>@Html.ActionLink("Back to Details", "Details", new {id = Model.StudentId}, new { @class = "btn btn-secondary mb-2" })</p>
<p>@Html.ActionLink("Back to list", "Index", null, null, new { @class = "btn btn-secondary mb-2" })</p>