@{
  Layout = "_Layout";
}

@model AIUniversity.Models.Dorm

<h4>Edit Dorm</h4>
<hr />

<p>@Html.ValidationMessageFor(model => model.DormName, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

<h4>Edit this dorm: @Html.DisplayFor(model => model.DormName)</h4>

@using (Html.BeginForm())
{

<div class = "container">
  <p>Dorm</p>
  <div class="row">
    <div class="col-6 col-md-2"><p>Name: </p></div>
    <div class="col-6 col-md-2">@Html.TextBoxFor(model => model.DormName)</div> 
  </div>
  <div class="row">
    <div class="col-6 col-md-2"><input type="submit" value="Save"/></div>
    
  </div>
</div>   

}
<br>
<p>@Html.ActionLink("Show Dorms", "Index")</p>
