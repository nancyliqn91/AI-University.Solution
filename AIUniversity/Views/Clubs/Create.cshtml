@{
  Layout = "_Layout";
}

@model AIUniversity.Models.Club

<h4>Add a new Club</h4>
<hr />

<p>@Html.ValidationMessageFor(model => model.ClubName, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{

<div class = "container">
  <p>Club</p>
  <div class="row">
    <div class="col-6 col-md-3"><p>Name: @Html.TextBoxFor(model => model.ClubName)</p></div>
    <div class="col-6 col-md-4"><p>Description: @Html.TextBoxFor(model => model.ClubDescription)</p></div>
    <div class="col-6 col-md-4"><p>President: @Html.TextBoxFor(model => model.ClubPresident)</p></div>
  </div>
</div>
   
  <input type="submit" value="Add a Club"/>
}
<br>
<p>@Html.ActionLink("Show Clubs", "Index")</p>