@{
  Layout = "_Layout";
}

@using AIUniversity.Models;

<h1>Departments</h1>

@if (@Model.Count == 0)
{
  <h3>No Departments have been added yet!</h3>
}
else
{
  <ul>
  @foreach (Department department in Model)
  {
    <li>@Html.ActionLink($"{department.DepartmentName}", "Details", new { id = department.DepartmentId}, new { @class = "btn btn-primary mb-2" })</li>
  }
  </ul>
}

<p>@Html.ActionLink("Add a new Department", "Create", null, null, new { @class = "btn btn-secondary mb-2" })</p>
