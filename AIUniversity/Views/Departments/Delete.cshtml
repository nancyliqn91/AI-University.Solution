@{
  Layout = "_Layout";
}

@model AIUniversity.Models.Department

<div class="card border-danger mb-3">
  <div class="card-header bg-danger text-white">Delete Department</div>
  <div class="card-body">
    <h5 class="card-title">Are you sure you want to delete: <em>@Html.DisplayFor(model => model.DepartmentName)</em>?</h5>
    <p class="card-text">
    </p>
    @using (Html.BeginForm())
    {
      <button type="submit" class="btn btn-danger">Delete</button>
    }
  </div>
</div>

@Html.ActionLink("Back to Department List", "Index", null, new { @class = "btn btn-primary" })
